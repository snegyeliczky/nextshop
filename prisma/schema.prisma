generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id             String @id
  name           String
  img            String @db.LongText
  minOrderAmount Int
  price          Int
  orders         Cart[]
  stock          Stock?
}

model Cart {
  id        Int     @id @default(autoincrement())
  name      String
  userId    String
  productId String
  product   Product @relation(fields: [productId], references: [id])
  price     Int
  status    Status
}

model Stock {
  productId String  @id @unique
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
}

enum Status {
  IN_CART
  PAYED
  REMUVED
}
